<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreacionEvento">
    <TextView
        android:id="@+id/tituloEventoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Nuevo Evento"
        android:textSize="18sp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/deporteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloEventoTextView"
        android:hint="Deporte del Evento"
        android:inputType="text" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="282dp"
        android:layout_height="264dp"
        android:layout_below="@id/deporteEditText"
        android:layout_centerHorizontal="true" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="281dp"
        android:layout_height="206dp"
        android:layout_below="@id/datePicker"
        android:layout_centerHorizontal="true" />

    <!-- Agregar opciones para seleccionar ubicaciÃ³n y amigos para invitar -->

    <Button
        android:id="@+id/crearEventoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timePicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Crear Evento" />

</RelativeLayout>