<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Equipos">
    <TextView
        android:id="@+id/tituloEquiposTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Equipos"
        android:textSize="18sp"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/listaEquipos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloEquiposTextView"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/crearEquipoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listaEquipos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Crear Nuevo Equipo" />

</RelativeLayout>