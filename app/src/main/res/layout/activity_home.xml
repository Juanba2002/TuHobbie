<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ImageView
        android:id="@+id/photoImageView6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/Mapa"
        android:layout_above="@+id/searchView"
        android:layout_below="@id/filterOptions"  />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:queryHint="Buscar canchas..."
        android:background="@android:color/white"/>

    <RadioGroup
        android:id="@+id/filterOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchView"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioDeporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deporte"/>

        <RadioButton
            android:id="@+id/radioInstalaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instalaciones"/>

        <!-- Agrega más opciones de filtrado aquí si es necesario -->

    </RadioGroup>

    <Button
        android:id="@+id/verEventosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        android:text="Ver Eventos"/>

    <Button
        android:id="@+id/verEquiposButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:text="Ver Equipos"/>

    <Button
        android:id="@+id/verCanchasButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:text="Ver Canchas"/>

    <Button
        android:id="@+id/verPerfilButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Ver Perfil"/>

</RelativeLayout>

